<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.xs93.framework.widget.progress.ProgressView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progress="90"
        app:progress_cap="round"
        app:progress_color="#FF0000"
        app:progress_colors="@array/gradient_colors"
        app:progress_colors_positions="@array/gradient_colors_position"
        app:progress_max="100"
        app:progress_start_angle="angle270"
        app:progress_style="circle"
        app:progress_width="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>