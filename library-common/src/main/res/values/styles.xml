<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleShapeStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="WanToolbarStyle" parent="ToolbarStyle">
        <item name="background">@color/primaryColor</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/WanToolBarTitleTextAppearance</item>
        <item name="titleCentered">true</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:layout_height">@dimen/default_toolbar_height</item>
    </style>

    <style name="WanToolBarTitleTextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WanCommonButtonStyle">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="ArticleTagStyle">
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>